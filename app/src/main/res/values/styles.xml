<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_background</item>
        <item name="hintTextColor">@color/text_input_background</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="BlueActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/dark_blue</item>
    </style>

    <style name="WhiteActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>

</resources>
