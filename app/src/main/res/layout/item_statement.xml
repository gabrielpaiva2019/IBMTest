<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_height_80dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/default_margin_16dp"
    android:layout_marginTop="@dimen/default_margin_16dp"
    android:layout_marginRight="@dimen/default_margin_16dp"
    android:background="@drawable/item_installment_background"
    android:elevation="8dp">

        <TextView
            android:id="@+id/textViewTransactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_14dp"
            android:layout_marginTop="@dimen/default_margin_10dp"
            android:fontFamily="sans-serif"
            tools:text="Pagamento"
            android:textColor="@color/grey"
            android:textSize="@dimen/default_textsize_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTransactionDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_14dp"
        android:fontFamily="sans-serif"
        tools:text="Conta de luz"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/default_textsize_16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewTransactionType"
        app:layout_constraintTop_toBottomOf="@+id/textViewTransactionType" />

    <TextView
        android:id="@+id/textViewTransactionValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_14dp"
        android:layout_marginEnd="@dimen/default_margin_20dp"
        android:fontFamily="@font/helvetica_light"
        tools:text="R$1.000,00"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/default_textsize_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTransactionDate" />

        <TextView
            android:id="@+id/textViewTransactionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_10dp"
            android:layout_marginEnd="@dimen/default_margin_23dp"
            android:fontFamily="sans-serif"
            tools:text="12/12/2018"
            android:textColor="@color/grey"
            android:textSize="@dimen/default_textsize_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
